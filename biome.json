{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error"
      },
      "correctness": {
        "noUnusedImports": "error"
      },
      "style": {
        "useNodejsImportProtocol": "off",
        "useImportType": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useValidAnchor": "off"
      }
    }
  },

  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "enabled": true
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "globals": ["window.plausible", "plausible"]
  },

  "css": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80
    }
  },

  "files": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "src/**/*.json",
      "src/**/*.mjs",
      "app/**/*.ts",
      "app/**/*.tsx",
      "app/**/*.js",
      "app/**/*.jsx",
      "app/**/*.json",
      "app/**/*.mjs",
      "./*.ts",
      "./*.tsx",
      "./*.js",
      "./*.jsx",
      "./*.json",
      "./*.mjs"
    ],
    "ignore": [
      "node_modules",
      "**/node_modules/**",
      "dist",
      "bin",
      ".expo",
      "./expo-env.d.ts",
      "scripts",
      ".next",
      "./src/metronic/**",
      "./src/generated/**",
      "./src/graphql"
    ],
    "ignoreUnknown": true
  }
}
