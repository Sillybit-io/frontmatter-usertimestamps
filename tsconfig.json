{
  "extends": "@total-typescript/tsconfig/tsc/dom/library",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2023", "DOM"],
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/main": ["main.ts"],
      "@/models/*": ["./models/*"],
      "@/services/*": ["./services/*"],
      "@/constants/*": ["./constants/*"],
      "@/ui/*": ["./ui/*"],
      "@/commands/*": ["./commands/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts"]
}
